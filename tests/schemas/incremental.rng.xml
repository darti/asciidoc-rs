    prefix/URI bindings
  -->

    <start>
        <ref name="testSuite" />
    </start>

    <define name="testSuite">
        <element name="testSuite">
            <ref name="header" />
            <zeroOrMore>
                <choice>
                    <ref name="testSuite" />
                    <ref name="testCase" />
                </choice>
            </zeroOrMore>
        </element>
    </define>
</grammar>